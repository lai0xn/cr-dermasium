package users

import (
	"github.com/lai0xn/cr-dermasuim/storage"
	uuid "github.com/satori/go.uuid"
)

type userService struct{}

func NewService() *userService {
	return &userService{}
}

func (s *userService) GetUserProfile(id uuid.UUID) (User, error) {
	var user User
	err := storage.DB.Where("id = ?").First(&user).Error
	if err != nil {
		return User{}, err
	}
	return user, nil
}

func (s *userService) SetUserProfile(payload ProfilePayload) error {
	var user User
	db := storage.DB.Where("id = ?").Find(&user)
	if db.Error != nil {
		return db.Error
	}
	user.FirstName = payload.FirstName
	user.LastName = payload.LastName
	user.Email = payload.Email
	user.Birthday = payload.BirthDay
	user.Adress = payload.Adress
	db = storage.DB.Save(&user)
	if db.Error != nil {
		return db.Error
	}
	return nil
}
